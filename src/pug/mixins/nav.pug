mixin nav(blockName)
	nav.nav(class=`nav--${blockName}`)
		ul.menu
			if (blockName == 'main')
				- var menuHeader = ["home", "skin concerns", "shop all", "results", "about us", "contacts"];
			else
				- var menuHeader = ["home", "skin concerns", "shop all", "results", "about us", "contacts", "log in", "create account"];

			each menuHeaderItem in menuHeader
				if (menuHeaderItem == 'skin concerns')
					li.menu__item.menu__item--main.menu__item--main-sub
						a.menu__link.menu__link--submenu.text.text--stand(href="#")=menuHeaderItem
						ul.menu__submenu
							
							- for (let i = 0; i < 4; i++)
							
								li.menu__item.menu__item--sub
									a.menu__link.menu__link--sub.text.text--stand(href="#") submenu-#{i+1}
				else
					li.menu__item.menu__item--main
						a.menu__link.text.text--stand(href="#")=menuHeaderItem
